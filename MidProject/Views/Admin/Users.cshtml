@model List<MidProject.Models.Database.User>
@{
    ViewBag.Title = "Users";
    Layout = "~/Views/Shared/Admin_Layout.cshtml";
}

<h2>Users</h2>

<p><a href="/Admin/Create" class="btn btn-primary btn-lg">Create New User &raquo;</a></p>

<table class="table table-bordered">
    <thead>
        <tr>
            <td>ID</td>
            <td>Name</td>
            <td>Email</td>
            <td>Role</td>
            <td>Edit</td>
            <td>Delete</td>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
        <tr>
            <td>@user.Id</td>
            <td>@user.Name</td>
            <td>@user.Email</td>
            <td>@user.Role</td>
            <td><a href="/Admin/EditUser/@user.Id" class="btn btn-info">Edit</a></td>
            <td><a href="/Admin/DeleteUser/@user.Id" class="btn btn-danger">Delete</a></td>
        </tr>
        }
    </tbody>
</table>
